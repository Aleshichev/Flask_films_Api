  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User registration and login with token"
    },
    {
      "name": "Film Request",
      "description": "Example API for requesting and return films requests"
    },
    {
      "name": "Actor Request",
      "description": "Example API for requesting and return actors requests"
    }
